                    <RadioButton android:text="@string/Pp1" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg31"/>
                    <RadioButton android:text="@string/Pp9" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg39"/>
                </RadioGroup>
            </TableRow>


        </TableLayout>

        <Button
