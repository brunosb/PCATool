                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg21"/>
                    <RadioButton android:text="@string/Pp9" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg29"/>
                </RadioGroup>
            </TableRow>
            <TableRow>
                <TextView android:text="@string/G3P" android:padding="3dp"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/GPG3">
                    <RadioButton android:text="@string/Pp4" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg34"/>
                    <RadioButton android:text="@string/Pp3" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg33"/>
                    <RadioButton android:text="@string/Pp2" android:layout_width="wrap_content"
