                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg19"/>
                </RadioGroup>
            </TableRow>
            <TableRow>
                <TextView android:text="@string/G2P" android:padding="3dp"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/GPG2">
                    <RadioButton android:text="@string/Pp4" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg24"/>
                    <RadioButton android:text="@string/Pp3" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/pg23"/>
