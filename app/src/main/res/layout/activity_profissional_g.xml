                <TextView android:text="@string/Pp9" android:textAlignment="center" android:padding="5dp" android:textStyle="bold"/>
            </TableRow>

            <TableRow>
                <TextView android:text="@string/G1P" android:padding="3dp"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/GPG1">
                    <RadioButton android:text="@string/Pp4" android:layout_width="wrap_content"
